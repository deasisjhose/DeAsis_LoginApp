@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="username">Username:</label>
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @style="width:200px"})
        @Html.ValidationMessageFor(m => m.Username)
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style="width:200px" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <button type="submit" class="btn btn-primary" style="margin-top:10px">Log in</button>
}
